<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
				   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

	<changeSet id="1" author="LEG - Soluções em TI">
		<preConditions onFail="MARK_RAN"
			onFailMessage="Já existe a tabela HOSPEDE">
			<not>
				<tableExists tableName="hospede" />
			</not>
		</preConditions>

		<createTable tableName="hospede">
			<column name="cpf" type="int">
				<constraints nullable="false" primaryKey="true"
					primaryKeyName="pk_hospede" />
			</column>
			<column name="nome" type="${descricao}">
				<constraints nullable="false" />
			</column>
			<column name="sobreNome" type="${descricao}">
				<constraints nullable="false" />
			</column>
			<column name="data_nascimento" type="${data}">
				<constraints nullable="false" />
			</column>
			<column name="telefone" type="${descricao}">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="2" author="LEG - Soluções em TI">
		<preConditions onFail="MARK_RAN"
			onFailMessage="Já existe a tabela RESERVA">
			<not>
				<tableExists tableName="reserva" />
			</not>
		</preConditions>

		<createTable tableName="reserva">
			<column name="id" type="int">
				<constraints primaryKey="true"
					primaryKeyName="pk_reserva" nullable="false" />
			</column>
			<column name="data_reserva" type="${data}">
				<constraints nullable="false" />
			</column>
			<column name="data_entrada" type="${data}">
				<constraints nullable="false" />
			</column>
			<column name="data_saida" type="${data}">
				<constraints nullable="false" />
			</column>
			<column name="sub_total" type="${valor}">
				<constraints nullable="false" />
			</column>
			<column name="hospede_cpf" type="int">
				<constraints nullable="false"
					foreignKeyName="fk_reserva_hospede" referencedTableName="hospede"
					referencedColumnNames="cpf" />
			</column>
		</createTable>

		<addAutoIncrement tableName="reserva" columnName="id"
			columnDataType="int" startWith="1" incrementBy="1" />
	</changeSet>

	<changeSet id="3" author="LEG - Soluções em TI">
		<preConditions onFail="MARK_RAN"
			onFailMessage="Já existe a tabela QUARTO">
			<not>
				<tableExists tableName="quarto" />
			</not>
		</preConditions>

		<createTable tableName="quarto">
			<column name="id" type="int">
				<constraints primaryKey="true"
					primaryKeyName="pk_quarto" nullable="false" />
			</column>
			<column name="tipo" type="Char">
				<constraints nullable="false" />
			</column>
			<column name="valor_diaria" type="${valor}">
				<constraints nullable="false" />
			</column>
			<column name="reserva_id" type="int">
				<constraints nullable="false"
					foreignKeyName="fk_quarto_reserva" referencedTableName="reserva"
					referencedColumnNames="id" />
			</column>			
		</createTable>

		<addAutoIncrement tableName="quarto" columnName="id"
			columnDataType="int" incrementBy="1" startWith="1" />
	</changeSet>
	
	<changeSet id="4" author="LEG - Soluções em TI">
		<preConditions onFail="MARK_RAN"
			onFailMessage="Já existe a tabela HOSPEDAGEM">
			<not>
				<tableExists tableName="hospedagem" />
			</not>
		</preConditions>

		<createTable tableName="hospedagem">
			<column name="id" type="int">
				<constraints primaryKey="true"
					primaryKeyName="pk_hospedagem" nullable="false" />
			</column>
			<column name="check_in" type="DateTime">
				<constraints nullable="false" />
			</column>
			<column name="check_out" type="DateTime">
			</column>
			<column name="valor_total" type="${valor}">
			</column>
		</createTable>

		<addAutoIncrement tableName="hospedagem"
			columnName="id" columnDataType="int" incrementBy="1" startWith="1" />
	</changeSet>
</databaseChangeLog>